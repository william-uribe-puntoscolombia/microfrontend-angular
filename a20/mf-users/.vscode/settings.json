{
  // Pritter default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  // Intellisense tailwind : this could be the same that styles.scss -> html{font-size:14px}
  "tailwindCSS.rootFontSize": 16,
  // Use default LF, for OS Windows and Mac end line.
  "files.eol": "\n",
  // Extension css variables, Help variables of PrimeNg
  "cssVariables.lookupFiles": ["node_modules/@pco-front-assets/styles/_variables.scss"],
  // Sonnarlint
  "sonarlint.focusOnNewCode": true,
  "sonarlint.connectedMode.project": {
    "connectionId": "sonar-puntoscolombia",
    "projectKey": "DevOpsPCO_pco-laas-front"
  },

  // Customize each Micro
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#911bff",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveBackground": "#7e17dd",
    "titleBar.inactiveForeground": "#ffffff"
    // "activityBar.background": "#911bff",
    // "activityBar.foreground": "#FFFFFF"
  },
  "window.title": "✦ USERS ✦  ${activeEditorMedium}"
}

{
  // Customization of the editor
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#7678ed",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveBackground": "#7678ed98",
    "titleBar.inactiveForeground": "#ffffff"
  },
  "window.title": "✦ MF-USERS ✦  ${activeEditorMedium}",

  // Pritter default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },

  // Intellisense tailwind : this could be the same that styles.scss -> html{font-size:14px}
  "tailwindCSS.rootFontSize": 16,

  // Use default LF, for OS Windows and Mac end line.
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Extension css variables, Help variables of PrimeNg
  "cssVariables.lookupFiles": ["node_modules/@pco-front-assets/styles/_variables.scss"],

  // Performance
  "search.exclude": {
    "**/dist": true,
    "**/*.log": true,
    "**/*.pid": true,
    "**/.git": true,
    "**/node_modules": true
  }
}
